<!DOCTYPE html>
<html>

<head>
  <title>Contact</title>
  <link rel="stylesheet" href="/public/style.css" />
  <!-- linking boostrap css cdn  -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <!-- NavBar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-lg">
      <a class="navbar-brand me-5" href="/home">
        <img src="/public/assets/logo.png" alt="logo" />
      </a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a href="/blog" class="nav-link list-active">Blog</a>
          </li>
        </ul>
      </div>
      <div class="d-flex contact-me">
        <a href="/contact-me"> Contact Me </a>
      </div>
    </div>
  </nav>

  <!-- Form Contact -->
  <div class="form-contact">
    <div class="container-form">
      <form>
          <div style=" width: 450px;
        margin-top: 50px; border: 2px solid  black;
        padding: 30px; background-color: whitesmoke; height: 250%;">
        <form action="" style="text-align: left;"
        </div>

        <div class="form-contact">
            <div class="container-form">
                <form>
                    <div>
                        <label for="Name" style="font-size: 30px;
                            font-style: italic;">Name</label>
            
                        <input id="input-name" name="input-name" type="text"
                            style="width: 100%; box-sizing: border-box;
                            padding: 10px; border-radius: 5px; margin-top: 10px;
                            margin-bottom: 22px; border: 2px solid black;
                            background-color: blanchedalmond;"/>
                    </div>
                    <div>
                        <label for="email" style="font-size: 30px;
                            font-style: italic;">Email</label>
            
                        <input id="input-Email" name="input-Email" type="Email"  
                            style="width: 100%; box-sizing: border-box;
                            padding: 10px; border-radius: 5px; margin-top: 10px;
                            margin-bottom: 22px; border: 2px solid black;
                            background-color: blanchedalmond;"/>
                    </div>
            
                    <div>
                        <label for="text " style="font-size: 30px;
                            font-style: italic;">Phone</label>
            
                        <input id="input-Phone" name="input-Phone"  type="text"   
                            style="width: 100%; box-sizing: border-box;
                            padding: 10px; border-radius: 5px; margin-top: 10px;
                            margin-bottom: 22px; border: 2px solid black;
                            background-color: blanchedalmond;"/>
                    </div>
            
                    <div>
                        <label for="input-Subject " style="font-size: 30px;
                            font-style: italic;">Subject</label>
            
                        <select id="input-Subject" style="width: 100%; box-sizing: border-box;
                        padding: 10px; border-radius: 5px; margin-top: 10px;
                        margin-bottom: 22px; border: 2px solid black;
                        background-color: blanchedalmond;">
                            <option></option>
                            <option value="Beginner">Beginner</option>
                            <option value="Medium">Medium</option>
                            <option value="Expert">Expert</option>
                        </select>
                    <div>
                        <label for="Message " style="font-size: 30px;
                                font-style: italic;">Your Message</label>
              
                        <textarea id="input-Message" name="input-Message" type="text"
                            placeholder="Your Message";   
                            style="width: 100%; height: 100px; box-sizing: border-box;
                            padding: 10px; border-radius: 5px; margin-top: 10px;
                            margin-bottom: 22px; border: 2px solid black;
                            background-color: blanchedalmond;"></textarea>
                    </div> 
                        <a href=""></a>
                        <button type="button" onclick="showData()">Submit</button>
                </form>
            </div>
        </div>

            
        </div>
      </form>
    </div>
  </div>
</body>

</html>