<!DOCTYPE html>
<html>

<head>
  <title>Add Blog</title>
  <link rel="stylesheet" href="/public/style.css">
  <!-- linking boostrap css cdn  -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-lg">
      <a class="navbar-brand me-5" href="/home">
        <img src="/public/assets/logo.png" alt="logo" />
      </a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a href="/blog" class="nav-link list-active">Blog</a>
          </li>
        </ul>
      </div>
      <div class="d-flex contact-me">
        <a href="/contact-me"> Contact Me </a>
      </div>
    </div>
  </nav>

  <form class="form-container" action="/blog" method="POST">
    <h1>Add Blog</h1>
          <div>
            <label for="input-blog-title">PROJECT NAME</label>
            <input id="input-blog-title"/>
          </div>

         <div style="display: flex;">
          <div>
            <label for="Start Date"> Start Date</label>
            <input type="DATE">
          </div>
          <div style="margin-left: 10px;">
            <label for="End Date">End Date</label>
            <input type="date">
          </div>
        </div>  

          <div>
            <label for="input-blog-content">DESCRIPTION</label>
            <textarea id="input-blog-content"></textarea>
          </div>

           <div class="Technologies">
             <label for="input-blog-technologies">TECHNOLOGIES</label>
             <div class="technologies">
              <input type="checkbox" name="NJ"> NOD Js 
             </div>
             <div>
              <input type="checkbox" name="RJ"> React Js
             </div>
             <div>
              <input type="checkbox" name="NJs"> Next Js
             </div>
             <div>
              <input type="checkbox" name="TS"> TypeScript
             </div>
           </div>

          <div>
            <label>Upload Image</label>
            <div class="input-blog-image-group">
              <label for="input-blog-image">
                <p>Choose</p>
                <img src="/public/assets/file.png" alt="file" />
              </label>
              <input type="file" id="input-blog-image" hidden />
            </div>
          </div>
          <div class="button-group">
            <button>Post Blog</button>
          </div>
         
        </form>
        
      </div>
    </div>
 
  </form>
</body>

</html>